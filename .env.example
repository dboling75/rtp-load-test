# =====================================================================
# üöÄ K6 + InfluxDB + Grafana Environment Configuration
# =====================================================================

# ---------------------------------------------------------------------
# InfluxDB v2 Setup
# ---------------------------------------------------------------------
DOCKER_INFLUXDB_INIT_MODE=setup
DOCKER_INFLUXDB_INIT_USERNAME=admin
DOCKER_INFLUXDB_INIT_PASSWORD=admin12345
DOCKER_INFLUXDB_INIT_ORG=k6-org
DOCKER_INFLUXDB_INIT_BUCKET=k6
DOCKER_INFLUXDB_INIT_ADMIN_TOKEN=k6-token-please-change

# ---------------------------------------------------------------------
# Grafana Admin Setup
# ---------------------------------------------------------------------
GF_SECURITY_ADMIN_USER=admin
GF_SECURITY_ADMIN_PASSWORD=admin

# ---------------------------------------------------------------------
# k6 Runner Service Configuration
# ---------------------------------------------------------------------
# Default script path (relative to the mounted /scripts directory).
K6_SCRIPT=/scripts/example.js
# Mirror values for convenience (consumed by the runner command)
K6_ORG=${DOCKER_INFLUXDB_INIT_ORG}
K6_BUCKET=${DOCKER_INFLUXDB_INIT_BUCKET}
K6_INFLUXDB_TOKEN=${DOCKER_INFLUXDB_INIT_ADMIN_TOKEN}

# ---------------------------------------------------------------------
# Networking
# ---------------------------------------------------------------------
INFLUXDB_PORT=8086
GRAFANA_PORT=3000

# =====================================================================
# ‚öôÔ∏è TEST CONFIGURATION VARIABLES (used inside your k6 scripts)
# =====================================================================
# Base URL for the API or site under test
BASE_URL=https://test.k6.io

# Virtual Users (VUs) and test duration
VUS=10
DURATION=30s

# Optional ramping stages: "10s:10,30s:50,10s:0"
STAGES=

# Thresholds (example: p95 http_req_duration < 500ms)
THRESHOLD_HTTP_REQ_DURATION_P95=500

# Optional auth token header content
AUTH_TOKEN=

# Think time between requests
SLEEP_DURATION=1s

# Output verbosity (normal | debug)
LOG_LEVEL=normal
